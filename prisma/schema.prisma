generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////
//         USER MODEL           //
//////////////////////////////////
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Hashed password
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  devices   Device[]
}

enum Role {
  USER
  ADMIN
}


//////////////////////////////////
//         DEVICE MODEL         //
//////////////////////////////////
model Device {
  id          Int      @id @default(autoincrement())
  serial      String   @unique // Unique identifier for the device
  name        String
  location    String?  // Optional location string
  ownerId     Int      // Foreign key linking to the User who registered it
  // Relationship: Each device must be owned by one User
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
    
  telemetry   Telemetry[]
  tokens      DeviceRegistrationToken[]
  //alerts      Alert[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastSeen    DateTime?

  @@index([ownerId]) // Indexing the foreign key for faster queries
}

//////////////////////////////////
//        TELEMETRY MODEL       //
//////////////////////////////////
model Telemetry {
  id          Int      @id @default(autoincrement())
  deviceId    Int
  ts          DateTime @default(now())
  payload     Json    // Flexible JSON for miscellaneous data
  temperature Float?
  humidity    Float?
  battery     Float?
  device      Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([deviceId, ts])
}

//////////////////////////////////
//      REGISTRATION MODEL      //
//////////////////////////////////
model DeviceRegistrationToken {
  id        Int      @id @default(autoincrement())
  deviceId  Int
  token     String   @unique
  expiresAt DateTime
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
}


